{
    "version": "3.5.2",
    "description": "A file unarchiver that prevents character encoding issues",
    "homepage": "https://www.cube-soft.jp/cubeice/",
    "license": "Apache-2.0",
    "architecture": {
        "64bit": {
            "url": "https://dl.cube-soft.jp/archive/cubeice-3.5.2-x64.exe",
            "hash": "75152D48787819DB0D5BB8680529901E51ACA39F7D679474643404604EFD44FA"
        },
        "32bit": {
            "url": "https://dl.cube-soft.jp/archive/cubeice-3.5.2-x86.exe",
            "hash": "96BEF371127FC874A3E2D11FFEDB4AFE90DC88C798C3CFC976103FE827027D05"
        }
    },
    "innosetup": true,
    "pre_install": [
        "$items = @{ 'dll' = @('AlphaFS', 'Cube.Core', 'Cube.FileSystem.AlphaFS', 'Cube.FileSystem.SevenZip', 'Cube.FileSystem.SevenZip.Ice', 'Cube.Forms', 'Cube.Net', 'Cube.Services', 'NLog'); 'exe' = @('CubeChecker', 'cubeice', 'cubeice-associate', 'cubeice-setting'); 'config' = @('CubeChecker.exe', 'cubeice.exe', 'cubeice-associate.exe', 'cubeice-setting.exe') }",
        "foreach ($ext in $items.Keys) { foreach ($i in $items.$ext) { if (Test-Path \"$dir\\$i,1.$ext\") { Copy-Item \"$dir\\$i,1.$ext\" \"$dir\\$i.$ext\" -Force } } }"
    ],
    "bin": [
        "CubeChecker.exe",
        "cubeice.exe",
        "cubeice-associate.exe",
        "cubeice-setting.exe"
    ],
    "shortcuts": [
        ["cubeice.exe", "CubeICE"],
        ["cubeice-setting.exe", "CubeICE Setting"]
    ],
    "checkver": {
        "url": "https://www.cube-soft.jp/cubeice/releases.php",
        "re": "CubeICE\\s+([\\d.]+)"
    },
    "autoupdate": {
        "architecture": {
            "64bit": {
                "url": "https://dl.cube-soft.jp/archive/cubeice-$version-x64.exe"
            },
            "32bit": {
                "url": "https://dl.cube-soft.jp/archive/cubeice-$version-x86.exe"
            }
        }
    }
}
