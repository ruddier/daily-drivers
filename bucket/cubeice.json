{
    "version": "3.5.2",
    "description": "CubeICE is a file archiver that prevents problems with garbled characters when decompressing files.",
    "homepage": "https://www.cube-soft.jp/cubeice/",
    "license": "Apache-2.0",
    "pre_install": [
        "$items = @{",
        "    \"dll\" = @(",
        "        \"AlphaFS\",",
        "        \"Cube.Core\",",
        "        \"Cube.FileSystem.AlphaFS\",",
        "        \"Cube.FileSystem.SevenZip\",",
        "        \"Cube.FileSystem.SevenZip.Ice\",",
        "        \"Cube.Forms\",",
        "        \"Cube.Net\",",
        "        \"Cube.Services\",",
        "        \"NLog\"",
        "    )",
        "    \"exe\" = @(",
        "        \"CubeChecker\",",
        "        \"cubeice\",",
        "        \"cubeice-associate\",",
        "        \"cubeice-setting\"",
        "    )",
        "    \"config\" = @(",
        "        \"CubeChecker.exe\",",
        "        \"cubeice.exe\",",
        "        \"cubeice-associate.exe\",",
        "        \"cubeice-setting.exe\"",
        "    )",
        "}",
        "$append = \",1\"",
        "foreach ($item in $items.GetEnumerator()) {",
        "    $ext = $item.Name",
        "    foreach ($i in $item.Value) {",
        "        Copy-Item \"$dir\\$i$append.$ext\" \"$dir\\$i.$ext\"",
        "    }",
        "}"
    ],
    "bin": [
        "CubeChecker.exe",
        "cubeice.exe",
        "cubeice-associate.exe",
        "cubeice-setting.exe"
    ],
    "shortcuts": [
        [
            "cubeice.exe",
            "CubeICE"
        ],
        [
            "cubeice-setting.exe",
            "CubeICE Setting"
        ]
    ],
    "architecture": {
        "64bit": {
            "url": "https://dl.cube-soft.jp/archive/cubeice-3.5.2-x64.exe",
            "hash": "75152d48787819db0d5bb8680529901e51aca39f7d679474643404604efd44fa"
        },
        "32bit": {
            "url": "https://dl.cube-soft.jp/archive/cubeice-3.5.2-x86.exe",
            "hash": "96bef371127fc874a3e2d11ffedb4afe90dc88c798c3cfc976103fe827027d05"
        }
    },
    "innosetup": true,
    "checkver": {
        "url": "https://www.cube-soft.jp/cubeice/releases.php",
        "regex": "CubeICE\\s+([\\d.]+)"
    },
    "autoupdate": {
        "architecture": {
            "64bit": {
                "url": "https://dl.cube-soft.jp/archive/cubeice-$version-x64.exe"
            },
            "32bit": {
                "url": "https://dl.cube-soft.jp/archive/cubeice-$version-x86.exe"
            }
        }
    }
}
